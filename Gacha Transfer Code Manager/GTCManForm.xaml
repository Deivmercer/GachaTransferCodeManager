<Window x:Class="Gacha_Transfer_Code_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gacha_Transfer_Code_Manager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <ScrollViewer VerticalScrollBarVisibility="Visible">
        <Grid x:Name="FormGrid">
            <Button x:Name="AddNewEntryButton" Content="" HorizontalAlignment="Left" Margin="12,12,0,0" VerticalAlignment="Top" Width="75" Height="75" Click="AddNewEntryButton_Click">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/addNewEntry.bmp" Stretch="Fill"/>
                </Button.Background>
            </Button>
        </Grid>
    </ScrollViewer>
</Window>