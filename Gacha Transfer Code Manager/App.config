<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <!--<startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>-->
    <configSections>
        <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,Log4net"/>
    </configSections>
    <log4net debug="true">
        <appender name="RFileAppender" type="log4net.Appender.RollingFileAppender, log4net">
            <File value="C:\Users\davem\AppData\Roaming\Gacha Transfer Code Manager\log.log"/>
            <!--<File value="${AppData}/Roaming/Gacha Transfer Code Manager/log.log"/>-->
            <AppendToFile value="true"/>
            <DatePattern value="_yyyyMMdd"/>
            <RollingStyle value="Date"/>
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%level %date ==&gt; %message%newline"/>
            </layout>
        </appender>
        <root>
            <level value="ALL"/>
            <appender-ref ref="RFileAppender"/>
        </root>
    </log4net>
</configuration>